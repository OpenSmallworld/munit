#% text_encoding = iso8859_1
_package sw

_pragma(classify_level=debug)
##
## This mixin defines given/when/then methods on applications.
##
## All classes that inherits from this mixin must define a
## .properties method that returns a property_list.
##
def_mixin( :application_system_test_mixin, { :serialised_test_mixin, :gui_framework_test_mixin } )
$

_pragma(classify_level=debug)
application_system_test_mixin.define_shared_constant(:wait_for_application_threads?,
	## Wait for all the tasks on applicaton to finish when starting application
	## You can redefine it to _false on your test speed up application start
	_true,
	_false )
$
_pragma(classify_level=debug)
application_system_test_mixin.define_shared_constant(:smooth_app_termination?,
	## no dialogs when closing application
	_true,
	_false )
$

_pragma(classify_level=debug)
_method application_system_test_mixin.given_an_application( application_name _optional width, height, stub_alerts? )
	## 
	## Ensure that the required application (as specified by
	## APPLICATION_NAME) is running.
	## If WIDTH and HEIGHT are specified, the application's top frame will be set to
	## this size. If not specified, it will be maximised if the :frame_maximised?
	## property is true.
	##
	##     * If it is already running, the test will run
	##     * If it is available but not yet running, it will be
	##       started and the test will run 
	##     * If it is not available, the test will fail.
	##

	_if stub_alerts? _isnt _false
	_then 
		_self.int!stub_alerts()
	_endif

	start << date_time.now()

	_if _self.smooth_app_termination? _is _true 
	_then
		stub_method_helper.replace_method(application, :only_one_application_available?, _proc () >> _false _endproc)
		stub_method_helper.replace_method(application, :anything_running?, _proc () >> _true _endproc)
	_endif 

	# Make sure there is a queue for events
	_if _self.properties[ :queue ] _is _unset
	_then
		_self.properties[ :queue ] << atomic_queue.new( 1019 )
	_endif
	
	# Make sure the application is running
	_if ( app << smallworld_product.application( application_name ) ) _is _unset
	_then
		_if ( app_def << smallworld_product.application_definition( application_name ) ) _isnt _unset
		_then
			# Application exists but is not yet running, start it
			write( "*** Starting application: ", application_name )
			# Don't check for licences without database
			_if app_def.properties[:requires_database?] _is _false _andif
			    ds_environment.c_is_initialised? _is _false
			_then
				stub_method_helper.replace_method(licence_manager, :|check_licence_and_expiry()|, _proc () _endproc)
			_endif 
			app << app_def.int!start()
			_self.wait_for_application_to_be_active( application_name )
		_else
			# Application does not exist
			condition.raise( :error, :string, "Cannot find " + application_name + " application" )
		_endif
	_endif

	_if ( top_frame << app.top_frame ) _isnt _unset
	_then
		_if width _isnt _unset _orif height _isnt _unset
		_then
			top_frame.set_size( width, height )
		_else 
			top_frame.maximized? << _self.properties[:frame_maximised?].default(_false)
		_endif 
		top_frame.top_canvas_container.add_dependent(_self)
	_endif 

	app.add_dependent(_self)
  
	_self.properties[ :application ] << app

	write( "Completed: application startup. Duration: ", date_time.now() - start )
	_if top_frame _isnt _unset
	_then
		write( tab_char, "Application size: ", top_frame.width, " x ", top_frame.height )
	_endif 
	write( "Starting test: ", _self.get_name() )

	>> _self 
	
_endmethod
$


_private _method application_system_test_mixin.given_a_case_application( app_name, soc_name )
	## Start Case application with soc name (as specificied by the app_name and soc_name)
	## This would start the application in the given soc_name,
	## skipping the SOC selector dialog. 				

	app_def << smallworld_product.application_definition(app_name)
	new_app_def << application_definition.new(app_def.application_name, app_def.application_class_name, :soc_name, soc_name, _scatter app_def.properties.for_scatter())
	new_app_def.int!start()

	app << new_app_def.application
	
	app.top_frame.maximized? << true
  
	_self.properties[ :application ] << app
	
	_self.wait_for_application_to_be_active(app_name)
	>> _self 
	
_endmethod
$


