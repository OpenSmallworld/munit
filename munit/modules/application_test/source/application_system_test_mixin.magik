_pragma(classify_level=restricted)
_method application_system_test_mixin.given_an_embedded_editor_populated_with( ds_name, table_name, field_values )
        ## 
        ## Populate the embedded editor with a record in table TABLE_NAME in
        ## dataset DS_NAME using field values in FIELD_VALUES.
        ##
        ## Example: given_an_embedded_editor_populated_with(:electric, :sub_substation,
        ## property_list.new_with(:asset_id, "sanity_substation"))
        ##                                

        _self.given_an_embedded_editor( ds_name,  table_name )
	
	app << _self.properties[:application]
	db  << app.database
	col << db.collection( ds_name, table_name )
	pred << predicate
	_for field_name, value _over field_values.fast_keys_and_elements()
	_loop
		pred << pred.and( predicate.eq( field_name, value ) )
	_endloop
	rec << col.select( pred ).an_element()

	edman << app.get_service_provider( :editor_manager )
	edman.edit_object( rec )
	        
        >> _self
        
_endmethod
$

_pragma(classify_level=restricted)
_private _method application_system_test_mixin.int!set_text_item_value_with_callback(item, new_text)
	## 
	## 

	# set the NEW_TEXT when ITEM is enabled.
	_if item.enabled? _is _true
	_then
		item.value << new_text
		_if item.activate_selector _isnt _unset
		_then
			item.activate_selector.send_to(item.model, item.value, item)
		_endif
	_else
		condition.raise(:error, :string, write_string("Unable to set the text because the item ", item, " is not enabled."))
	_endif
_endmethod
